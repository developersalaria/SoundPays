@page
@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Xsrf
@Html.AntiForgeryToken()
@model SoundpaysAdd.UI.Pages.Campaign.IndexModel

<!-- #region Data table  -->
<div class="widget-group row">
    <div class="col-12">
        <div class="card">
            <!-- card-header -->
            <div class="card-header">
                <div class="row">
                    <div class="col">
                        <span class="h5 border-right-1 pr-2 marketing-header">
                            <i class="icon-truck-fast"></i>Campaigns
                        </span>
                    </div>
                    <div class="col d-flex justify-content-end">
                        <button class="btn btn-primary" id="btnAddCampaign" onclick="CampaignViewModel.OpenCampaignModal(0)"><i class="fas fa-plus me-1"></i>Campaign</button>
                    </div>
                </div>
            </div>
            <!-- /.card-header -->
            <!-- card-body -->
            <div class="card-body">
                <table id="tblCampaign" class="table table-bordered table-hover dt-responsive nowrap" width="100%" cellspacing="0">
                    <thead>
                        <tr>

                            <th data-class="expand">
                                <div class="table-header">
                                    <span class="column-title">Advertiser</span>
                                </div>
                            </th>
                            <th data-class="expand">
                                <div class="table-header">
                                    <span class="column-title">Long Name</span>
                                </div>
                            </th>
                            <th data-class="expand">
                                <div class="table-header">
                                    <span class="column-title">Short Name</span>
                                </div>
                            </th>
                            <th data-class="expand">
                                <div class="table-header">
                                    <span class="column-title">Start Date</span>
                                </div>
                            </th>
                            <th data-class="expand">
                                <div class="table-header">
                                    <span class="column-title">Start Time</span>
                                </div>
                            </th>

                            <th data-class="expand">
                                <div class="table-header">
                                    <span class="column-title">Stop Date</span>
                                </div>
                            </th>
                            <th data-class="expand">
                                <div class="table-header">
                                    <span class="column-title">Stop Time</span>
                                </div>
                            </th>

                            <th data-class="expand">
                                <div class="table-header">
                                    <span class="column-title">Priority</span>
                                </div>
                            </th>
                            <th data-class="expand">
                                <div class="table-header">
                                    <span class="column-title">CPM</span>
                                </div>
                            </th>
                            <th data-class="expand">
                                <div class="table-header">
                                    <span class="column-title">Min Impressions</span>
                                </div>
                            </th>
                            <th data-class="expand">
                                <div class="table-header">
                                    <span class="column-title">Max Impressions</span>
                                </div>
                            </th>
                            <th data-class="expand">
                                <div class="table-header">
                                    <span class="column-title">Active</span>
                                </div>
                            </th>
                            <th data-class="expand">
                                <div class="table-header">
                                    <span class="column-title">Paused</span>
                                </div>
                            </th>
                            <th data-class="expand">
                                <div class="table-header">
                                    <span class="column-title">Action</span>
                                </div>
                            </th>

                        </tr>
                    </thead>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
    </div>
</div>
<!-- /.content -->
<!-- #endregion -->
<!-- #region scripts -->
@section Scripts
    {
    <script>
        let isAdmin = `@Model.IsAdmin` == "True";
    </script>
    <script src="~/js/CampaignViewModel.js"></script>
    <script>
        CampaignViewModel.CampaignListView();
    </script>
}
<!-- #endregion -->